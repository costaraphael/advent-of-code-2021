defmodule Day9 do
  def parse_map(input) do
    for {line, y} <- input |> lines |> Enum.with_index(),
        {number, x} <- line |> String.graphemes() |> Enum.with_index(),
        into: %{},
        do: {{x, y}, String.to_integer(number)}
