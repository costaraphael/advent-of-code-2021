    pos
    |> adjacent_pos()
    |> Enum.map(&Map.get(map, &1, number + 1))
    |> Enum.all?(&(&1 > number))
  end

  defp adjacent_pos({x, y}) do
    [{x - 1, y}, {x + 1, y}, {x, y - 1}, {x, y + 1}]
